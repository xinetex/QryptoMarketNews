<?xml version="1.0" encoding="UTF-8"?>
<component name="AlphaHUD" extends="Group">
    <interface>
        <field id="riskScore" type="integer" value="50" onChange="onDataChange" />
        <field id="sentiment" type="string" value="NEUTRAL" onChange="onDataChange" />
        <field id="momentum" type="float" value="0.0" onChange="onDataChange" />
    </interface>

    <script type="text/brightscript" uri="AlphaHUD.brs" />

    <children>
        <!-- Background: Pill Shape -->
        <Rectangle 
            width="400" 
            height="80" 
            color="#09090b" 
            opacity="0.9" 
            translation="[0,0]" />
            
        <Rectangle 
            width="400" 
            height="80" 
            color="#ffffff" 
            opacity="0.1" 
            fill="false" 
            stroke="1" />

        <!-- Vertical Divider -->
        <Rectangle width="1" height="40" color="#ffffff20" translation="[130,20]" />
        <Rectangle width="1" height="40" color="#ffffff20" translation="[260,20]" />

        <!-- 1. Risk Gauge -->
        <Group translation="[20,15]">
            <Label text="RISK" font="font:SmallestSystemFont" color="#71717a" />
            <Label id="riskLabel" translation="[0,20]" text="50/100" font="font:SmallBoldSystemFont" color="#ffffff" width="100" />
        </Group>

        <!-- 2. Sentiment -->
        <Group translation="[140,15]">
            <Label text="MARKET" font="font:SmallestSystemFont" color="#71717a" />
            <Label id="sentimentLabel" translation="[0,20]" text="NEUTRAL" font="font:SmallBoldSystemFont" color="#ffffff" width="120" />
        </Group>

        <!-- 3. Momentum -->
        <Group translation="[280,15]">
            <Label text="VELOCITY" font="font:SmallestSystemFont" color="#71717a" />
            <Label id="momentumLabel" translation="[0,20]" text="0.0x" font="font:SmallBoldSystemFont" color="#ffffff" width="100" />
        </Group>

        <!-- Dynamic Indicator Bar (Bottom) -->
        <Rectangle id="riskBar" width="400" height="2" color="#ffffff50" translation="[0,78]" />
    </children>
</component>
