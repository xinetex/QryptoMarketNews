<?xml version="1.0" encoding="UTF-8"?>
<!-- Prophet TV Ambient Mode - Living Market Visualization -->
<component name="AmbientScene" extends="Scene">
    <interface>
        <field id="exitRequested" type="boolean" value="false" />
    </interface>

    <script type="text/brightscript" uri="AmbientScene.brs" />

    <children>
        <!-- Base Layer: Deep Space Background -->
        <Rectangle id="bgLayer1"
            width="1920"
            height="1080"
            color="#050510" />
        
        <!-- Gradient Overlay Layer (Animated) -->
        <Rectangle id="gradientLayer"
            width="1920"
            height="1080"
            color="#0a0a2e"
            opacity="0.6" />
        
        <!-- Ambient Glow (Top - Animated Position) -->
        <Rectangle id="glowTop"
            translation="[0,0]"
            width="1920"
            height="600"
            color="#1a0a3e"
            opacity="0.4" />
        
        <!-- Ambient Glow (Bottom - Animated) -->
        <Rectangle id="glowBottom"
            translation="[0,600]"
            width="1920"
            height="480"
            color="#0a1a2e"
            opacity="0.3" />

        <!-- Particle Container -->
        <Group id="particleContainer" />

        <!-- Center Content: Large Price Display -->
        <Group id="priceDisplay" translation="[960,400]">
            <!-- Main Coin Symbol -->
            <Label id="mainSymbol"
                translation="[-200,-100]"
                text="â‚¿"
                font="font:LargestBoldSystemFont"
                color="#f7931a"
                horizAlign="center"
                width="400" />
            
            <!-- Main Price -->
            <Label id="mainPrice"
                translation="[-300,50]"
                text="$94,521"
                font="font:LargestBoldSystemFont"
                color="#ffffff"
                horizAlign="center"
                width="600" />
            
            <!-- Price Change -->
            <Label id="priceChange"
                translation="[-150,150]"
                text="+2.34%"
                font="font:LargeBoldSystemFont"
                color="#10b981"
                horizAlign="center"
                width="300" />
        </Group>

        <!-- Secondary Prices Row -->
        <Group id="secondaryPrices" translation="[0,750]">
            <Group id="ethPrice" translation="[200,0]">
                <Label id="ethSymbol" text="ETH" font="font:MediumBoldSystemFont" color="#627eea" />
                <Label id="ethValue" translation="[80,0]" text="$3,421" font="font:MediumBoldSystemFont" color="#ffffff" />
                <Label id="ethChange" translation="[200,0]" text="+1.8%" font="font:SmallBoldSystemFont" color="#10b981" />
            </Group>
            <Group id="solPrice" translation="[600,0]">
                <Label id="solSymbol" text="SOL" font="font:MediumBoldSystemFont" color="#9945ff" />
                <Label id="solValue" translation="[80,0]" text="$198" font="font:MediumBoldSystemFont" color="#ffffff" />
                <Label id="solChange" translation="[180,0]" text="+5.2%" font="font:SmallBoldSystemFont" color="#10b981" />
            </Group>
            <Group id="xrpPrice" translation="[1000,0]">
                <Label id="xrpSymbol" text="XRP" font="font:MediumBoldSystemFont" color="#00aae4" />
                <Label id="xrpValue" translation="[80,0]" text="$2.41" font="font:MediumBoldSystemFont" color="#ffffff" />
                <Label id="xrpChange" translation="[180,0]" text="+3.1%" font="font:SmallBoldSystemFont" color="#10b981" />
            </Group>
            <Group id="dogePrice" translation="[1400,0]">
                <Label id="dogeSymbol" text="DOGE" font="font:MediumBoldSystemFont" color="#c3a634" />
                <Label id="dogeValue" translation="[100,0]" text="$0.38" font="font:MediumBoldSystemFont" color="#ffffff" />
                <Label id="dogeChange" translation="[200,0]" text="-0.4%" font="font:SmallBoldSystemFont" color="#ef4444" />
            </Group>
        </Group>

        <!-- Market Sentiment Indicator -->
        <Group id="sentimentBar" translation="[660,900]">
            <Label id="sentimentLabel"
                text="MARKET SENTIMENT"
                font="font:SmallBoldSystemFont"
                color="#ffffff50"
                horizAlign="center"
                width="600" />
            <Rectangle id="sentimentBg"
                translation="[0,30]"
                width="600"
                height="8"
                color="#ffffff20" />
            <Rectangle id="sentimentFill"
                translation="[0,30]"
                width="400"
                height="8"
                color="#10b981" />
            <Label id="sentimentValue"
                translation="[0,50]"
                text="67% Bullish"
                font="font:SmallBoldSystemFont"
                color="#10b981"
                horizAlign="center"
                width="600" />
        </Group>

        <!-- Exit Hint -->
        <Label id="exitHint"
            translation="[810,1020]"
            text="Press OK or BACK to exit"
            font="font:SmallSystemFont"
            color="#ffffff30"
            horizAlign="center"
            width="300" />

        <!-- Brand -->
        <Label id="brandLabel"
            translation="[60,40]"
            text="PROPHET TV"
            font="font:SmallBoldSystemFont"
            color="#00f3ff50" />

        <!-- Time Display -->
        <Label id="timeLabel"
            translation="[1700,40]"
            text="12:00 AM"
            font="font:SmallBoldSystemFont"
            color="#ffffff50"
            horizAlign="right"
            width="150" />

        <!-- Timers -->
        <Timer id="colorTimer" repeat="true" duration="5" />
        <Timer id="particleTimer" repeat="true" duration="0.1" />
        <Timer id="priceTimer" repeat="true" duration="30" />
        <Timer id="clockTimer" repeat="true" duration="60" />

        <!-- Crypto Service for live data -->
        <CryptoService id="cryptoService" />
    </children>
</component>
