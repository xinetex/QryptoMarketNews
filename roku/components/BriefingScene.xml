<?xml version="1.0" encoding="UTF-8"?>
<!-- Prophet TV Briefing Scene - Daily Market Summary & Podcasts -->
<component name="BriefingScene" extends="Group">
    <interface>
        <field id="exitRequested" type="boolean" value="false" />
    </interface>

    <script type="text/brightscript" uri="BriefingScene.brs" />

    <children>
        <!-- Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#050510" />
        
        <!-- Ambient Glow -->
        <Rectangle id="ambientGlow"
            width="1920"
            height="400"
            color="#1a0a3e"
            opacity="0.4" />

        <!-- Header -->
        <Group id="header" translation="[60,50]">
            <Label id="headerIcon"
                text="ðŸ”Š"
                font="font:LargestBoldSystemFont"
                color="#bc13fe" />
            <Label id="headerTitle"
                translation="[80,10]"
                text="Daily Briefing &amp; Podcasts"
                font="font:LargeBoldSystemFont"
                color="#ffffff" />
            <Label id="headerDate"
                translation="[80,60]"
                text=""
                font="font:SmallSystemFont"
                color="#ffffff50" />
        </Group>

        <!-- Main Content Area with 2 Columns -->
        
        <!-- Left Column: Audio Player & Current Episode (800px) -->
        <Group id="playerSection" translation="[60,180]">
            <Rectangle id="playerBg"
                width="800"
                height="800"
                color="#ffffff05" />
                
            <!-- Podcast Artwork -->
            <Poster id="podcastImage"
                translation="[200,80]"
                width="400"
                height="400"
                loadDisplayMode="scaleToFit" />
                
            <!-- Now Playing Details -->
            <Group id="nowPlayingInfo" translation="[40,520]">
                <Label id="podcastName"
                    text="Select an episode"
                    font="font:MediumSystemFont"
                    color="#bc13fe"
                    width="720"
                    horizAlign="center" />
                    
                <Label id="episodeTitle"
                    translation="[0,40]"
                    text=""
                    font="font:MediumBoldSystemFont"
                    color="#ffffff"
                    width="720"
                    horizAlign="center"
                    maxLines="2"
                    wrap="true" />
                    
                <Label id="playStatus"
                    translation="[0,120]"
                    text=""
                    font="font:SmallBoldSystemFont"
                    color="#ffffff70"
                    width="720"
                    horizAlign="center" />
            </Group>
            
            <!-- Playback Progress -->
            <Group id="progressBar" translation="[100,680]" visible="false">
                <Rectangle width="600" height="4" color="#333333" />
                <Rectangle id="progressFill" width="0" height="4" color="#10b981" />
            </Group>
            
            <!-- Controls Hint -->
            <Label id="controlsHint"
                translation="[0,740]"
                text="[OK] Play/Pause   [BACK] Exit"
                font="font:SmallSystemFont"
                color="#ffffff30"
                width="800"
                horizAlign="center" />
        </Group>

        <!-- Right Column: Episode List (900px) -->
        <Group id="listSection" translation="[920,180]">
            <Label id="listTitle"
                text="Latest Episodes"
                font="font:MediumBoldSystemFont"
                color="#ffffff" />
            
            <!-- Using MarkupGrid as vertical list -->
            <MarkupGrid id="episodeList"
                translation="[0,60]"
                itemComponentName="BriefingItem"
                numColumns="1"
                numRows="5"
                itemSize="[900,120]"
                itemSpacing="[0,20]"
                focusable="true"
                drawFocusFeedback="true" />
        </Group>

        <!-- Audio Node -->
        <Audio id="audioPlayer" />
        
        <!-- Crypto Service -->
        <CryptoService id="cryptoService" />
        
        <!-- Refresh Timer for Progress Bar -->
        <Timer id="progressTimer" repeat="true" duration="1" />
    </children>
</component>
