<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel CoinDetailScene - Full coin/token/NFT detail view -->
<component name="CoinDetailScene" extends="Group">
    <interface>
        <field id="coin" type="assocarray" onChange="onCoinSet" />
        <field id="isNFT" type="boolean" value="false" />
    </interface>

    <script type="text/brightscript" uri="CoinDetailScene.brs" />

    <children>
        <!-- Dark Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#060606" />
            
        <!-- Premium Backdrop (Coin Image Blown Up) -->
        <Poster id="heroBackdrop"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToFill"
            opacity="0.3"
            translation="[0,0]" />
            
        <!-- Gradient Overlay -->
        <Rectangle id="backdropOverlay"
            width="1920"
            height="1080"
            color="#060606e0" />

        <!-- Back Button Hint -->
        <Group id="backHint" translation="[60,40]">
            <Label id="backLabel"
                text="â—€ BACK"
                font="font:SmallBoldSystemFont"
                color="#ffffff60" />
        </Group>

        <!-- Left Panel: Coin Info (500px) -->
        <Group id="infoPanel" translation="[60,100]">
            <!-- Coin Image -->
            <Poster id="coinImage"
                translation="[0,0]"
                width="120"
                height="120"
                loadDisplayMode="scaleToFit" />

            <!-- Coin Name & Symbol -->
            <Group id="coinHeader" translation="[140,10]">
                <Label id="coinName"
                    text=""
                    font="font:LargeBoldSystemFont"
                    color="#ffffff" />
                <Label id="coinSymbol"
                    translation="[0,45]"
                    text=""
                    font="font:MediumSystemFont"
                    color="#ffffff70" />
            </Group>

            <!-- Price -->
            <Group id="priceSection" translation="[0,150]">
                <Label id="priceLabel"
                    text=""
                    font="font:LargeBoldSystemFont"
                    color="#ffffff" />
                <Label id="priceChange"
                    translation="[300,10]"
                    text=""
                    font="font:MediumBoldSystemFont"
                    color="#10b981" />
            </Group>
            
            <!-- Quick Analysis -->
            <Group id="analysisSection" translation="[0,200]">
                <Label id="analysisTitle"
                    text="Analysis"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff70" />
                
                <Label id="rankLabel"
                    translation="[0,30]"
                    text=""
                    font="font:SmallSystemFont"
                    color="#ffffff" />
                    
                <Label id="trendLabel"
                    translation="[0,55]"
                    text=""
                    font="font:SmallSystemFont"
                    color="#ffffff" />
            </Group>

            <!-- Description -->
            <Label id="coinDescription"
                translation="[0,320]"
                text=""
                font="font:SmallSystemFont"
                color="#ffffff80"
                width="450"
                maxLines="5"
                wrap="true" />
        </Group>

        <!-- Right Panel: Chart & Deep Stats (1200px) -->
        <Group id="rightPanel" translation="[600,100]">
            <!-- Price Chart -->
            <Group id="chartSection" visible="true">
                <Label id="chartTitle"
                    text="Price Chart (7D)"
                    font="font:MediumBoldSystemFont"
                    color="#ffffff" />
                
                <!-- Custom Chart Component -->
                <SimpleChart id="simpleChart"
                    translation="[0,40]" />
            </Group>
            
            <!-- Extended Stats Grid (Compact) -->
            <Group id="statsGrid" translation="[0,320]">
                <!-- Row 1: Valuations -->
                <Group id="row1" translation="[0,0]">
                    <Group translation="[0,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="Market Cap" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="marketCapValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[235,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="Volume (24h)" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="volumeValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[470,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="FDV" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="fdvValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[705,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="Vol/Cap" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="volCapRatio" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                </Group>
                
                <!-- Row 2: Price Stats -->
                <Group id="row2" translation="[0,65]">
                    <Group translation="[0,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="High (24h)" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="high24hValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[235,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="Low (24h)" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="low24hValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[470,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="ATH" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="athValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                    <Group translation="[705,0]">
                         <Rectangle width="220" height="55" color="#ffffff05" />
                         <Label text="ATL" font="font:SmallSystemFont" color="#ffffff70" translation="[10,8]" />
                         <Label id="atlValue" text="--" font="font:SmallBoldSystemFont" color="#ffffff" translation="[10,28]" />
                    </Group>
                </Group>
            </Group>
            
            <!-- Supply Section (Compact) -->
            <Group id="supplySection" translation="[0,460]">
                <Label text="Supply" font="font:SmallBoldSystemFont" color="#ffffff70" />
                <Rectangle translation="[0,25]" width="600" height="8" color="#333333" />
                <Rectangle id="supplyProgress" translation="[0,25]" width="0" height="8" color="#6366f1" />
                <Label id="supplyLabels" translation="[0,40]" text="--" font="font:SmallSystemFont" color="#ffffff" />
            </Group>
            
            <!-- Placeholder nodes for BRS compat -->
            <Label id="rangeLowLabel" visible="false" />
            <Label id="rangeHighLabel" visible="false" />
            <Rectangle id="priceMarker" visible="false" width="1" height="1" />
            <Label id="currentPriceMarker" visible="false" />

            <!-- For NFTs: Art Gallery (Alternative to Chart) -->
            <Group id="nftGallery" visible="false">
                <Label id="galleryTitle"
                    text="Collection Gallery"
                    font="font:MediumBoldSystemFont"
                    color="#ffffff" />
                <MarkupGrid id="nftGrid"
                    translation="[0,40]"
                    itemComponentName="NFTItem"
                    numColumns="4"
                    numRows="2"
                    itemSize="[280,280]"
                    itemSpacing="[20,20]"
                    focusable="true"
                    drawFocusFeedback="true" />
            </Group>

            <!-- Social Links (Compact) -->
            <Group id="socialSection" translation="[0,520]">
                <Label id="socialTitle"
                    text="Links"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff70" />
                <Group id="socialLinks" translation="[0,22]">
                    <Label id="websiteLink" text="ðŸŒ Website" font="font:SmallSystemFont" color="#cccccc" />
                    <Label id="twitterLink" translation="[120,0]" text="ðŸ¦ Twitter" font="font:SmallSystemFont" color="#cccccc" />
                    <Label id="discordLink" translation="[230,0]" text="ðŸ’¬ Discord" font="font:SmallSystemFont" color="#cccccc" />
                </Group>
            </Group>
        </Group>
    </children>
</component>
