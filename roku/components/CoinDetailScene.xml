<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel CoinDetailScene - Full coin/token/NFT detail view -->
<component name="CoinDetailScene" extends="Group">
    <interface>
        <field id="coin" type="assocarray" onChange="onCoinSet" />
        <field id="isNFT" type="boolean" value="false" />
    </interface>

    <script type="text/brightscript" uri="CoinDetailScene.brs" />

    <children>
        <!-- Dark Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#060606" />
            
        <!-- Premium Backdrop (Coin Image Blown Up) -->
        <Poster id="heroBackdrop"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToFill"
            opacity="0.3"
            translation="[0,0]" />
            
        <!-- Gradient Overlay -->
        <Rectangle id="backdropOverlay"
            width="1920"
            height="1080"
            color="#060606e0" />

        <!-- Back Button Hint -->
        <Group id="backHint" translation="[60,40]">
            <Label id="backLabel"
                text="â—€ BACK"
                font="font:SmallBoldSystemFont"
                color="#ffffff60" />
        </Group>

        <!-- Left Panel: Coin Info (600px) -->
        <Group id="infoPanel" translation="[60,100]">
            <!-- Coin Image -->
            <Poster id="coinImage"
                translation="[0,0]"
                width="120"
                height="120"
                loadDisplayMode="scaleToFit" />

            <!-- Coin Name & Symbol -->
            <Group id="coinHeader" translation="[140,10]">
                <Label id="coinName"
                    text=""
                    font="font:LargeBoldSystemFont"
                    color="#ffffff" />
                <Label id="coinSymbol"
                    translation="[0,45]"
                    text=""
                    font="font:MediumSystemFont"
                    color="#ffffff70" />
            </Group>

            <!-- Price -->
            <Group id="priceSection" translation="[0,150]">
                <Label id="priceLabel"
                    text=""
                    font="font:LargeBoldSystemFont"
                    color="#ffffff" />
                <Label id="priceChange"
                    translation="[300,10]"
                    text=""
                    font="font:MediumBoldSystemFont"
                    color="#10b981" />
            </Group>

            <!-- Stats Grid - Glass Cards -->
            <Group id="statsSection" translation="[0,220]">
                <!-- Market Cap Card -->
                <Group id="marketCapRow" translation="[0,0]">
                    <Rectangle width="500" height="40" color="#ffffff05" translation="[0,-5]" />
                    <Label id="marketCapLabel"
                        translation="[15,5]"
                        text="Market Cap"
                        font="font:SmallSystemFont"
                        color="#ffffff70" />
                    <Label id="marketCapValue"
                        translation="[250,5]"
                        text=""
                        font="font:SmallBoldSystemFont"
                        color="#ffffff" />
                </Group>

                <!-- Volume Card -->
                <Group id="volumeRow" translation="[0,50]">
                    <Rectangle width="500" height="40" color="#ffffff05" translation="[0,-5]" />
                    <Label id="volumeLabel"
                        translation="[15,5]"
                        text="24h Volume"
                        font="font:SmallSystemFont"
                        color="#ffffff70" />
                    <Label id="volumeValue"
                        translation="[250,5]"
                        text=""
                        font="font:SmallBoldSystemFont"
                        color="#ffffff" />
                </Group>

                <!-- Supply Card -->
                <Group id="supplyRow" translation="[0,100]">
                    <Rectangle width="500" height="40" color="#ffffff05" translation="[0,-5]" />
                    <Label id="supplyLabel"
                        translation="[15,5]"
                        text="Circulating Supply"
                        font="font:SmallSystemFont"
                        color="#ffffff70" />
                    <Label id="supplyValue"
                        translation="[250,5]"
                        text=""
                        font="font:SmallBoldSystemFont"
                        color="#ffffff" />
                </Group>

                <!-- ATH Card -->
                <Group id="athRow" translation="[0,150]">
                    <Rectangle width="500" height="40" color="#ffffff05" translation="[0,-5]" />
                    <Label id="athLabel"
                        translation="[15,5]"
                        text="All-Time High"
                        font="font:SmallSystemFont"
                        color="#ffffff70" />
                    <Label id="athValue"
                        translation="[250,5]"
                        text=""
                        font="font:SmallBoldSystemFont"
                        color="#ffffff" />
                </Group>
            </Group>

            <!-- Description -->
            <Label id="coinDescription"
                translation="[0,440]"
                text=""
                font="font:SmallSystemFont"
                color="#ffffff80"
                width="500"
                maxLines="6"
                wrap="true" />
        </Group>

        <!-- Right Panel: Chart/NFT Gallery (1200px) -->
        <Group id="rightPanel" translation="[620,100]">
            <!-- For Coins: Price Chart -->
            <Group id="chartSection" visible="true">
                <Label id="chartTitle"
                    text="Price Chart (7D)"
                    font="font:MediumBoldSystemFont"
                    color="#ffffff" />
                
                <!-- Custom Chart Component -->
                <SimpleChart id="simpleChart"
                    translation="[0,40]" />
            </Group>

            <!-- For NFTs: Art Gallery -->
            <Group id="nftGallery" visible="false">
                <Label id="galleryTitle"
                    text="Collection Gallery"
                    font="font:MediumBoldSystemFont"
                    color="#ffffff" />
                <MarkupGrid id="nftGrid"
                    translation="[0,40]"
                    itemComponentName="NFTItem"
                    numColumns="4"
                    numRows="2"
                    itemSize="[280,280]"
                    itemSpacing="[20,20]"
                    focusable="true"
                    drawFocusFeedback="true" />
            </Group>

            <!-- Social Links -->
            <Group id="socialSection" translation="[0,500]">
                <Label id="socialTitle"
                    text="Links"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff70" />
                <Group id="socialLinks" translation="[0,30]">
                    <Label id="websiteLink"
                        text="ðŸŒ Website"
                        font="font:SmallSystemFont"
                        color="#cccccc" />
                    <Label id="twitterLink"
                        translation="[150,0]"
                        text="ðŸ¦ Twitter"
                        font="font:SmallSystemFont"
                        color="#cccccc" />
                    <Label id="discordLink"
                        translation="[300,0]"
                        text="ðŸ’¬ Discord"
                        font="font:SmallSystemFont"
                        color="#cccccc" />
                </Group>
            </Group>
        </Group>
    </children>
</component>
