<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel CoinItem - Compact grid item for displaying a coin -->
<component name="CoinItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>

    <script type="text/brightscript" uri="CoinItem.brs" />

    <children>
        <Group id="itemContainer">
            <!-- Background -->
            <Rectangle id="itemBg"
                width="320"
                height="80"
                color="#0f0f0f" />
            
            <!-- Focus Border -->
            <Rectangle id="focusBorder"
                width="328"
                height="88"
                translation="[-4,-4]"
                color="#00f3ff"
                opacity="0" />

            <!-- Coin Image (smaller) -->
            <Poster id="coinImage"
                translation="[8,8]"
                width="50"
                height="50"
                loadDisplayMode="scaleToFit" />

            <!-- Coin Info (tighter) -->
            <Group id="coinInfo" translation="[65,8]">
                <Label id="coinName"
                    text="Bitcoin"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff"
                    width="120"
                    maxLines="1" />
                <Label id="coinSymbol"
                    translation="[0,22]"
                    text="BTC"
                    font="font:SmallestSystemFont"
                    color="#ffffff60" />
            </Group>

            <!-- Price & Change (compact) -->
            <Group id="priceInfo" translation="[190,8]">
                <Label id="coinPrice"
                    text="$94,500"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff"
                    horizAlign="right"
                    width="120" />
                <Label id="coinChange"
                    translation="[0,22]"
                    text="+2.1%"
                    font="font:SmallestBoldSystemFont"
                    color="#10b981"
                    horizAlign="right"
                    width="120" />
            </Group>
        </Group>
    </children>
</component>
