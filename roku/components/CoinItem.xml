<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel CoinItem - Compact grid item for displaying a coin -->
<component name="CoinItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>

    <script type="text/brightscript" uri="CoinItem.brs" />

    <children>
        <Group id="itemContainer">
            <!-- Glass Background -->
            <Rectangle id="itemBg"
                width="420"
                height="85"
                color="#ffffff08" />
            
            <!-- Focus Border Glow -->
            <Rectangle id="focusBorder"
                width="428"
                height="93"
                translation="[-4,-4]"
                color="#00f3ff"
                opacity="0" />

            <!-- Coin Image (Icon) -->
            <Poster id="coinImage"
                translation="[15,12]"
                width="60"
                height="60"
                loadDisplayMode="scaleToFit" />

            <!-- Coin Info -->
            <Group id="coinInfo" translation="[90,12]">
                <Label id="coinName"
                    text="Bitcoin"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff"
                    width="180"
                    maxLines="1" />
                <Label id="coinSymbol"
                    translation="[0,30]"
                    text="BTC"
                    font="font:SmallestSystemFont"
                    color="#ffffff70" />
            </Group>

            <!-- Price & Change -->
            <Group id="priceInfo" translation="[270,12]">
                <Label id="coinPrice"
                    text="$94,500"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff"
                    horizAlign="right"
                    width="130" />
                <Label id="coinChange"
                    translation="[0,30]"
                    text="+2.1%"
                    font="font:SmallestBoldSystemFont"
                    color="#10b981"
                    horizAlign="right"
                    width="130" />
            </Group>
        </Group>
    </children>
</component>
