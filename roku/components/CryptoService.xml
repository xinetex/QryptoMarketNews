<?xml version="1.0" encoding="utf-8" ?>
<!-- QChannel Crypto Service -->
<component name="CryptoService" extends="Task">
    <interface>
        <field id="tickerData" type="array" />
        <field id="zoneData" type="array" />
        
        <!-- Zone detail requests - Task polls these -->
        <field id="requestZoneCoins" type="string" alwaysNotify="true" />
        <field id="zoneCoins" type="array" />
        
        <field id="nftRequest" type="boolean" alwaysNotify="true" />
        <field id="nftMode" type="string" value="trending" />
        <field id="nftData" type="assocarray" />
        
        <field id="newsRequest" type="boolean" alwaysNotify="true" />
        <field id="newsData" type="array" />
        
        <field id="coinRequest" type="string" />
        <field id="coinData" type="assocarray" />
        
        <!-- Market pulse data from feed -->
        <field id="marketPulse" type="assocarray" />
        
        <!-- App config from feed -->
        <field id="appConfig" type="assocarray" />
        
        <!-- Prediction markets from feed -->
        <field id="predictions" type="array" />
        
        <!-- AgentCache Intelligence Data -->
        <field id="intelligenceData" type="assocarray" />
        <field id="briefingData" type="assocarray" />
        <field id="visualsData" type="array" />
        
        <!-- Prophet OS Data -->
        <field id="alphaVector" type="assocarray" />
        <field id="newsHeadlines" type="string" />
        
        <!-- Prophet Points / Oracle System -->
        <field id="oracleProfile" type="assocarray" />
        <field id="watchTimeMinutes" type="integer" value="0" />
        <field id="watchTimePointsAwarded" type="integer" value="0" />
        <field id="deviceId" type="string" value="" />
        
        <!-- Sentinel Alert System -->
        <field id="alertData" type="assocarray" />
        <field id="lastAlertId" type="string" value="" />
        
        <!-- Whale Alert System -->
        <field id="whaleAlerts" type="array" />
        
        <field id="prerollVastUrl" type="string" />
        <field id="apiBaseUrl" type="string" value="https://qryptomarket-news.vercel.app" />

    </interface>
    
    <script type="text/brightscript" uri="CryptoService.brs" />
</component>
