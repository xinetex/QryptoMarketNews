<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel MainScene - TV News Style Layout -->
<component name="MainScene" extends="Scene">
    <interface>
        <field id="selectedZone" type="node" />
    </interface>

    <script type="text/brightscript" uri="MainScene.brs" />

    <children>
        <!-- Dark Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#0a0a0f" />

        <!-- TOP HEADER BAR (60px) -->
        <Group id="headerBar" translation="[0,40]">
            <!-- Logo/Brand -->
            <Label id="heroTitle"
                translation="[60,0]"
                text="QCHANNEL"
                font="font:MediumBoldSystemFont"
                color="#00f3ff" />
            <Label id="heroSubtitle"
                translation="[250,2]"
                text="Crypto Market Intelligence"
                font="font:SmallSystemFont"
                color="#ffffff70" />
            
            <!-- Live Indicator -->
            <Group id="liveIndicator" translation="[1760,0]">
                <Rectangle id="liveDot"
                    width="10"
                    height="10"
                    color="#ff0000"
                    translation="[0,8]" />
                <Label id="liveText"
                    translation="[18,0]"
                    text="LIVE"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff" />
            </Group>
        </Group>

        <!-- MARKET TICKER (50px) -->
        <Group id="tickerSection" translation="[0,100]">
            <Rectangle id="tickerBg"
                width="1920"
                height="50"
                color="#00000080" />
            <Label id="tickerLabel"
                translation="[60,12]"
                text="â–² MARKET"
                font="font:SmallBoldSystemFont"
                color="#00f3ff" />
            <Label id="tickerContent"
                translation="[200,12]"
                text="BTC $94,500 +2.1% â€¢ ETH $3,420 +1.8% â€¢ SOL $198 +5.2%"
                font="font:SmallBoldSystemFont"
                color="#ffffff" />
        </Group>

        <!-- MAIN CONTENT AREA -->
        <!-- Left Panel: Featured Zone (400px wide) -->
        <Group id="heroSection" translation="[60,170]">
            <Rectangle id="heroBg"
                width="400"
                height="500"
                color="#12121a" />
            
            <!-- Zone Image (smaller) -->
            <Poster id="heroImage"
                translation="[0,0]"
                width="400"
                height="200"
                loadDisplayMode="scaleToFill"
                uri="pkg:/images/zones/solana-hero.png" />

            <!-- Zone Info -->
            <Group id="spotlightContent" translation="[20,220]">
                <Label id="spotlightZoneName"
                    text="Solana Ecosystem"
                    font="font:MediumBoldSystemFont"
                    color="#ffffff"
                    width="360" />
                <Label id="spotlightStats"
                    translation="[0,40]"
                    text="TVL $8.2B â€¢ 24h +5.2%"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
                <Label id="spotlightDesc"
                    translation="[0,75]"
                    text="High-performance blockchain with DeFi, NFTs, and meme coins"
                    font="font:SmallSystemFont"
                    color="#ffffff80"
                    maxLines="3"
                    width="360"
                    wrap="true" />
            </Group>
        </Group>

        <!-- Right Panel: Zone Grid (1400px) -->
        <Group id="zonesSection" translation="[500,170]">
            <Label id="zonesHeader"
                text="SELECT YOUR ZONE"
                font="font:SmallBoldSystemFont"
                color="#ffffff70" />
            
            <!-- Zone Grid (2 rows x 4 cols) -->
            <MarkupGrid id="zoneGrid"
                translation="[0,40]"
                itemComponentName="ZoneCard"
                numColumns="4"
                numRows="2"
                itemSize="[300,200]"
                itemSpacing="[20,20]"
                focusable="true"
                drawFocusFeedback="true"
                wrapDividerWidth="0" />
        </Group>

        <!-- BOTTOM NEWS TICKER (80px) -->
        <Group id="newsSection" translation="[0,720]">
            <Rectangle id="newsBg"
                width="1920"
                height="80"
                color="#0f0f15" />
            <Label id="newsIcon"
                translation="[60,25]"
                text="ðŸ“° NEWS"
                font="font:SmallBoldSystemFont"
                color="#bc13fe" />
            <Label id="newsContent"
                translation="[200,15]"
                text="Bitcoin Approaches New All-Time High Amid Institutional Demand"
                font="font:SmallSystemFont"
                color="#ffffff"
                width="1600"
                maxLines="2" />
        </Group>

        <!-- Crypto Data Service -->
        <CryptoService id="cryptoService" />
    </children>
</component>
