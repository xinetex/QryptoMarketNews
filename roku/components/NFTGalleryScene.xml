<?xml version="1.0" encoding="UTF-8"?>
<!-- Prophet TV NFT Gallery - Cinematic Art Experience -->
<component name="NFTGalleryScene" extends="Group">
    <interface>
        <field id="exitRequested" type="boolean" value="false" />
        <field id="curationType" type="string" value="trending" />
    </interface>

    <script type="text/brightscript" uri="NFTGalleryScene.brs" />

    <children>
        <!-- Background Layer (Black) -->
        <Rectangle id="backgroundRect" width="1920" height="1080" color="#000000" />
            
        <!-- Full Screen Hero Image -->
        <Poster id="featuredImage"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToFill" />

        <!-- Cinematic Gradient Overlays -->
        <!-- Top Gradient for Header Readability -->
        <Rectangle width="1920" height="300" 
            color="#000000" 
            opacity="0.8" />
            
        <!-- Bottom Focus Area Gradient -->
        <Poster id="bottomGradient"
            translation="[0, 500]"
            width="1920"
            height="580"
            uri="pkg:/images/gradient_bottom.png"
            opacity="0.95" /> 
        <!-- Fallback Rectangle if image missing -->
        <Rectangle translation="[0, 500]" width="1920" height="580" color="#000000" opacity="0.9" />

        <!-- Curation Tabs (Top Center) -->
        <!-- Curation Tabs (Top Center) -->
        <Group id="filterTabs" translation="[600, 40]">
            <LayoutGroup layoutDirection="horiz" itemSpacings="[20]">
                <Group id="tab1" >
                    <Rectangle id="tab1Bg" width="220" height="40" color="#bc13fe" />
                    <Label id="tab1Label" translation="[0,8]" width="220" horizAlign="center" text="Trending" font="font:SmallBoldSystemFont" color="#ffffff" />
                </Group>
                <Group id="tab2">
                    <Rectangle id="tab2Bg" width="220" height="40" color="#ffffff20" />
                    <Label id="tab2Label" translation="[0,8]" width="220" horizAlign="center" text="Blue Chip" font="font:SmallBoldSystemFont" color="#ffffff80" />
                </Group>
                <Group id="tab3">
                    <Rectangle id="tab3Bg" width="220" height="40" color="#ffffff20" />
                    <Label id="tab3Label" translation="[0,8]" width="220" horizAlign="center" text="Aesthetic" font="font:SmallBoldSystemFont" color="#ffffff80" />
                </Group>
                <Group id="tab4">
                    <Rectangle id="tab4Bg" width="220" height="40" color="#ffffff20" />
                    <Label id="tab4Label" translation="[0,8]" width="220" horizAlign="center" text="Generative" font="font:SmallBoldSystemFont" color="#ffffff80" />
                </Group>
            </LayoutGroup>
        </Group>

        <!-- Art Details (Overlay on Image) -->
        <Group id="featuredInfo" translation="[100, 480]">
            <Label id="featuredTitle"
                text=""
                font="font:LargestBoldSystemFont"
                color="#ffffff"
                width="1200" />
            
            <Label id="featuredCollection"
                translation="[0, 60]"
                text=""
                font="font:MediumSystemFont"
                color="#bc13fe" />
                
            <LayoutGroup translation="[0, 110]" layoutDirection="horiz" itemSpacings="[40]">
                 <Label id="featuredPrice" text="" font="font:MediumBoldSystemFont" color="#10b981" />
                 <Label id="statVolume" text="" font="font:MediumSystemFont" color="#ffffff70" />
                 <Label id="statOwners" text="" font="font:MediumSystemFont" color="#ffffff70" />
            </LayoutGroup>
        </Group>

        <!-- Navigation Strip (Bottom 2 Rows) -->
        <PosterGrid id="nftGrid"
            translation="[100, 660]"
            itemSize="[260, 200]"
            numColumns="6"
            numRows="1"
            itemSpacing="[20, 20]"
            caption1NumLines="1"
            caption2NumLines="1"
            basePosterSize="[260, 200]" 
            focusable="true" />

        <!-- Timers -->
        <Timer id="autoScrollTimer" repeat="true" duration="8" />
        <Timer id="safetyTimer" repeat="false" duration="3" />

        <!-- Navigation Hints -->
        <Label translation="[1500, 1000]" text="* to Filter | BACK to Exit" font="font:SmallSystemFont" color="#ffffff30" />

        <!-- Crypto Service -->
        <CryptoService id="cryptoService" />
    </children>
</component>
