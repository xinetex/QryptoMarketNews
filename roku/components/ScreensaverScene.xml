<?xml version="1.0" encoding="UTF-8"?>
<!-- Prophet TV Screensaver - Simple Portfolio Display -->
<component name="ScreensaverScene" extends="Group">
    <interface>
        <field id="exitRequested" type="boolean" value="false" />
        <field id="contentData" type="assocarray" onChange="onContentDataChanged" />
    </interface>

    <script type="text/brightscript" uri="ScreensaverScene.brs" />

    <children>
        <!-- Background Layer (Black) -->
        <Rectangle width="1920" height="1080" color="#000000" />

        <!-- Double Buffer for Cross-Fades -->
        <Poster id="artLayer1" width="1920" height="1080" loadDisplayMode="scaleToFill" />
        <Poster id="artLayer2" width="1920" height="1080" loadDisplayMode="scaleToFill" opacity="0" />
        
        <!-- Gradient at bottom for text readability -->
        <Rectangle width="1920" height="300" translation="[0,780]" color="#000000c0" />

        <!-- Art Info Overlay -->
        <Group id="infoGroup" translation="[100, 850]">
            <Label id="collectionName" 
                text="Loading Art Gallery..." 
                font="font:LargeBoldSystemFont" 
                color="#bc13fe" />
            
            <Label id="artTitle" 
                translation="[0, 50]" 
                text="" 
                font="font:MediumSystemFont" 
                color="#ffffff" />
                
            <Label id="artPrice" 
                translation="[0, 90]" 
                text="" 
                font="font:SmallSystemFont" 
                color="#10b981" />
            <Label id="artPrice" 
                translation="[0, 90]" 
                text="" 
                font="font:SmallSystemFont" 
                color="#10b981" />
        </Group>

        <!-- Bouncing Ticker (DVD Style) -->
        <Group id="bounceGroup" translation="[500, 500]">
             <Rectangle width="300" height="60" color="#000000" opacity="0.8" cornerRadius="30" />
             <Label id="bounceLabel" 
                width="300" 
                height="60" 
                horizAlign="center" 
                vertAlign="center" 
                text="PROPHET TV" 
                font="font:SmallBoldSystemFont" 
                color="#00f3ff" />
        </Group>

        <!-- Clock (Small, Top Right) -->
        <Label id="clockLabel"
            translation="[1650, 50]"
            text=""
            font="font:MediumSystemFont"
            color="#ffffff50" />

        <!-- Exit Hint -->
        <Label id="exitHint"
            translation="[0, 1000]"
            width="1920"
            horizAlign="center"
            text="Press OK to resume"
            font="font:SmallSystemFont"
            color="#ffffff30" />

        <!-- Timers -->
        <Timer id="slideTimer" repeat="true" duration="15" />
        <Timer id="clockTimer" repeat="true" duration="60" />
        <Timer id="animTimer" repeat="true" duration="0.03" />

        <!-- Fade Animation -->
        <Animation id="fadeAnim" duration="2" easeFunction="linear">
            <FloatFieldInterpolator id="fadeInInterp" key="[0.0, 1.0]" keyValue="[0.0, 1.0]" fieldToInterp="artLayer2.opacity" />
            <FloatFieldInterpolator id="fadeOutInterp" key="[0.0, 1.0]" keyValue="[1.0, 0.0]" fieldToInterp="artLayer1.opacity" />
        </Animation>
    </children>
</component>
