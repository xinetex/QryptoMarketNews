<?xml version="1.0" encoding="UTF-8"?>
<!-- Prophet TV Screensaver - Simple Portfolio Display -->
<component name="ScreensaverScene" extends="Group">
    <interface>
        <field id="exitRequested" type="boolean" value="false" />
    </interface>

    <script type="text/brightscript" uri="ScreensaverScene.brs" />

    <children>
        <!-- Deep Space Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#020208" />
        
        <!-- Gradient Overlay -->
        <Rectangle id="gradientOverlay"
            width="1920"
            height="1080"
            color="#0a0a2e"
            opacity="0.5" />

        <!-- Center Content Group -->
        <Group id="contentGroup" translation="[480,270]">
            <!-- Brand -->
            <Label id="brandLabel"
                text="PROPHET TV"
                font="font:SmallBoldSystemFont"
                color="#bc13fe" />
            
            <!-- Main Display -->
            <Label id="mainSymbol"
                translation="[0,50]"
                text="â‚¿"
                font="font:LargestBoldSystemFont"
                color="#f7931a" />
            
            <Label id="mainPrice"
                translation="[100,30]"
                text="$94,521"
                font="font:LargestBoldSystemFont"
                color="#ffffff" />
            
            <Label id="mainChange"
                translation="[100,100]"
                text="+2.34%"
                font="font:LargeBoldSystemFont"
                color="#10b981" />
            
            <!-- Secondary Prices -->
            <Group id="secondaryDisplay" translation="[0,200]">
                <Label id="eth"
                    text="ETH $3,421 +1.8%"
                    font="font:MediumSystemFont"
                    color="#627eea" />
                <Label id="sol"
                    translation="[0,45]"
                    text="SOL $198 +5.2%"
                    font="font:MediumSystemFont"
                    color="#9945ff" />
                <Label id="xrp"
                    translation="[0,90]"
                    text="XRP $2.41 +3.1%"
                    font="font:MediumSystemFont"
                    color="#00aae4" />
            </Group>
            
            <!-- Clock -->
            <Label id="clockLabel"
                translation="[0,350]"
                text="11:30 PM"
                font="font:LargeBoldSystemFont"
                color="#ffffff30" />
            
            <!-- Date -->
            <Label id="dateLabel"
                translation="[0,410]"
                text="Thursday, January 16"
                font="font:SmallSystemFont"
                color="#ffffff20" />
        </Group>

        <!-- Exit Hint -->
        <Label id="exitHint"
            translation="[810,1020]"
            text="Press OK or BACK to exit"
            font="font:SmallSystemFont"
            color="#ffffff20" />

        <!-- Clock Timer -->
        <Timer id="clockTimer" repeat="true" duration="60" />
    </children>
</component>
