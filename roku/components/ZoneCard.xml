<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel ZoneCard - Compact TV Card Design -->
<component name="ZoneCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>

    <script type="text/brightscript" uri="ZoneCard.brs" />

    <children>
        <!-- Card Container -->
        <Group id="cardContainer">
            <!-- Background with Zone Color -->
            <Rectangle id="cardBg"
                width="300"
                height="200"
                color="#12121a" />
            
            <!-- Focus Border (hidden by default) -->
            <Rectangle id="focusBorder"
                width="308"
                height="208"
                translation="[-4,-4]"
                color="#00000000"
                opacity="0" />

            <!-- Zone Icon (Image) -->
            <Group id="iconContainer" translation="[15,15]">
                <Rectangle id="iconBg"
                    width="50"
                    height="50"
                    color="#ffffff10"
                    radius="8" />
                <Poster id="iconImage"
                    translation="[8,8]"
                    width="34"
                    height="34"
                    loadDisplayMode="scaleToFit" />
            </Group>

            <!-- TVL Badge -->
            <Group id="tvlBadge" translation="[200,15]">
                <Rectangle id="tvlBg"
                    width="85"
                    height="26"
                    color="#00000060" />
                <Label id="tvlLabel"
                    translation="[8,3]"
                    text="$8.2B"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
            </Group>

            <!-- Zone Title -->
            <Label id="titleLabel"
                translation="[15,75]"
                text="Zone Name"
                font="font:SmallBoldSystemFont"
                color="#ffffff"
                width="270"
                maxLines="2"
                wrap="true" />

            <!-- Change Indicator -->
            <Group id="changeIndicator" translation="[15,130]">
                <Label id="changeArrow"
                    text="â–²"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
                <Label id="changeLabel"
                    translation="[20,0]"
                    text="+5.2%"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
            </Group>

            <!-- Description (1 line) -->
            <Label id="descLabel"
                translation="[15,160]"
                text="Description"
                font="font:SmallSystemFont"
                color="#ffffff50"
                width="270"
                maxLines="1" />

            <!-- Color Accent Bar -->
            <Rectangle id="accentBar"
                translation="[0,196]"
                width="300"
                height="4"
                color="#9945FF" />

            <!-- Selection Glow -->
            <Rectangle id="selectionGlow"
                width="300"
                height="200"
                color="#00000000"
                opacity="0" />
        </Group>
    </children>
</component>
