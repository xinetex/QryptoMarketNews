<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel ZoneCard - Compact TV Card Design -->
<component name="ZoneCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentSet" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>

    <script type="text/brightscript" uri="ZoneCard.brs" />

    <children>
        <!-- Card Container Scaler -->
        <Group id="cardContainer">
            <!-- Glass Background -->
            <Rectangle id="cardBg"
                width="310"
                height="240"
                color="#ffffff10" />
            
            <!-- Focus Border Glow (Dynamic) -->
            <Rectangle id="focusBorder"
                width="318"
                height="248"
                translation="[-4,-4]"
                color="#00f3ff"
                opacity="0" />

            <!-- Zone Icon with Glow -->
            <Group id="iconContainer" translation="[20,20]">
                <Rectangle id="iconBg"
                    width="60"
                    height="60"
                    color="#ffffff08" />
                <Poster id="iconImage"
                    translation="[10,10]"
                    width="40"
                    height="40"
                    loadDisplayMode="scaleToFit" />
            </Group>

            <!-- TVL Badge (Top Right) -->
            <Group id="tvlBadge" translation="[190,20]">
                <Rectangle id="tvlBg"
                    width="100"
                    height="30"
                    color="#00000080" />
                <Label id="tvlLabel"
                    translation="[0,4]"
                    text="$8.2B"
                    font="font:SmallBoldSystemFont"
                    color="#10b981"
                    width="100"
                    horizAlign="center" />
            </Group>

            <!-- Zone Title -->
            <Label id="titleLabel"
                translation="[20,100]"
                text="Zone Name"
                font="font:MediumBoldSystemFont"
                color="#ffffff"
                width="270"
                maxLines="2"
                wrap="true" />

            <!-- Change Indicator -->
            <Group id="changeIndicator" translation="[20,170]">
                <Label id="changeArrow"
                    text="â–²"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
                <Label id="changeLabel"
                    translation="[20,0]"
                    text="+5.2%"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
            </Group>

            <!-- Short Description -->
            <Label id="descLabel"
                translation="[20,200]"
                text="Description text"
                font="font:SmallestSystemFont"
                color="#ffffff60"
                width="270"
                maxLines="1" />

            <!-- Dynamic Color Accent Bar -->
            <Rectangle id="accentBar"
                translation="[0,236]"
                width="310"
                height="4"
                color="#9945FF" />
        </Group>
    </children>
</component>
