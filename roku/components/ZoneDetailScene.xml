<?xml version="1.0" encoding="UTF-8"?>
<!-- QChannel ZoneDetail - Full-screen coin grid layout -->
<component name="ZoneDetailScene" extends="Group">
    <interface>
        <field id="zone" type="assocarray" onChange="onZoneSet" />
        <field id="coins" type="array" onChange="onCoinsSet" />
    </interface>

    <script type="text/brightscript" uri="ZoneDetailScene.brs" />

    <children>
        <!-- Dark Background -->
        <Rectangle id="backgroundRect"
            width="1920"
            height="1080"
            color="#060606" />

        <!-- Compact Header Bar (80px) -->
        <Group id="headerSection" translation="[0,0]">
            <Rectangle id="headerBg"
                width="1920"
                height="80"
                color="#0a0a0a" />
            
            <!-- Back Button -->
            <Label id="backLabel"
                translation="[60,25]"
                text="â—€ BACK"
                font="font:SmallBoldSystemFont"
                color="#ffffff60" />
            
            <!-- Zone Icon + Title -->
            <Poster id="zoneIcon"
                translation="[180,20]"
                width="32"
                height="32"
                loadDisplayMode="scaleToFit" />
            <Label id="zoneTitle"
                translation="[230,22]"
                text="Solana Ecosystem"
                font="font:MediumBoldSystemFont"
                color="#ffffff" />
            
            <!-- Zone Stats (right side) -->
            <Group id="zoneStats" translation="[800,22]">
                <Label id="tvlLabel"
                    text="TVL: $8.2B"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
                <Label id="changeLabel"
                    translation="[150,0]"
                    text="24h: +5.2%"
                    font="font:SmallBoldSystemFont"
                    color="#10b981" />
                <Label id="protocolsLabel"
                    translation="[300,0]"
                    text="Coins: 12"
                    font="font:SmallBoldSystemFont"
                    color="#ffffff80" />
            </Group>

            <!-- Accent Line -->
            <Rectangle id="accentLine"
                translation="[0,76]"
                width="1920"
                height="4"
                color="#9945FF" />
        </Group>

        <!-- Main Content: Full-Screen Coin Grid -->
        <Group id="coinsSection" translation="[0,100]">
            <Label id="coinsHeader"
                translation="[60,10]"
                text="Top Coins in Zone"
                font="font:SmallBoldSystemFont"
                color="#ffffff70" />
            
            <!-- 4x5 Coin Grid - wrap prevents off-screen focus -->
            <MarkupGrid id="coinsGrid"
                translation="[60,45]"
                itemComponentName="CoinItem"
                numColumns="4"
                numRows="5"
                itemSize="[420,85]"
                itemSpacing="[20,10]"
                focusable="true"
                drawFocusFeedback="true" />
        </Group>

        <!-- Bottom News Ticker (60px) -->
        <Group id="newsSection" translation="[0,660]">
            <Rectangle id="newsBg"
                width="1920"
                height="60"
                color="#0a0a0f" />
            <Label id="newsIcon"
                translation="[60,18]"
                text="ðŸ“°"
                font="font:SmallBoldSystemFont"
                color="#bc13fe" />
            <Label id="newsContent"
                translation="[100,18]"
                text="Loading news..."
                font="font:SmallSystemFont"
                color="#ffffff"
                width="1700"
                maxLines="1" />
        </Group>

        <!-- Ad Preroll Indicator (hidden) -->
        <Group id="adIndicator" translation="[1700,10]" visible="false">
            <Label id="adLabel"
                text="ðŸŽ¬ Ad"
                font="font:SmallSystemFont"
                color="#ffffff50" />
        </Group>

        <Timer id="newsTimer" repeat="true" duration="10" />
    </children>
</component>
